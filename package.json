{
  "name": "newapi",
  "version": "1.0.0",
  "private": true,
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "ts-node src/server.ts",
    "dev": "nodemon src/server.ts",
    "lint": "eslint .",
    "test": "jest",
    "start:worker:persistence": "ts-node src/workers/persistence.worker.ts",
    "start:worker:realtime": "ts-node src/workers/realtime.worker.ts",
    "start:worker:notification": "ts-node src/workers/notification.worker.ts",
    "start:workers": "node start-workers.js",
    "start:workers:dev": "concurrently \"npm run start:worker:persistence\" \"npm run start:worker:realtime\" \"npm run start:worker:notification\"",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "redis:cluster:init": "docker exec redis-cluster-init redis-cli --cluster create redis-node-1:6379 redis-node-2:6379 redis-node-3:6379 redis-node-4:6379 redis-node-5:6379 redis-node-6:6379 --cluster-replicas 1 --cluster-yes",
    "kafka:topics": "docker exec kafka-1 kafka-topics --bootstrap-server localhost:9092 --list",
    "kafka:create-topics": "ts-node scripts/create-kafka-topics.ts",
    "setup:enterprise": "npm run docker:up && sleep 30 && npm run redis:cluster:init && npm run kafka:create-topics",
    "health:check": "ts-node scripts/simple-health-check.ts",
    "start:production": "concurrently \"npm start\" \"npm run start:workers\"",
    "monitor": "ts-node scripts/monitor.ts"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.23.1",
    "@types/cors": "^2.8.19",
    "@types/ioredis": "^4.28.10",
    "@types/multer": "^1.4.13",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^10.0.0",
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.1.0",
    "firebase-admin": "^11.11.1",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.1.0",
    "node-fetch": "^2.7.0",
    "pg": "^8.11.5",
    "redis": "^5.5.6",
    "socket.io": "^4.7.5",
    "uuid": "^11.1.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.4",
    "@types/pg": "^8.10.9",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  },
  "description": "Enterprise-grade messaging API with Redis Cluster and Kafka",
  "keywords": [
    "api",
    "typescript",
    "postgresql",
    "redis-cluster",
    "kafka",
    "microservices",
    "enterprise",
    "messaging",
    "real-time"
  ],
  "author": "",
  "license": "ISC"
}
